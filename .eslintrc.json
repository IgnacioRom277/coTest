{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true,
        "mocha": true
    },
    "extends": [
        "airbnb-base",
        "plugin:mocha/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "linebreak-style": "off",
        "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }],
        "no-console": "off",
        "no-shadow": [2, {"allow": ["coTest"]}],
        "prefer-arrow-callback": ["error", { "allowNamedFunctions": true }],
        "prefer-destructuring": ["error", {"object": false, "array": true}]
    },
    "plugins": [
        "mocha"
    ]
}
